
extends layout

block content
    include navbar.pug
    .w3-container
        h1.w3-center System Users
        .w3-row 
            .w3-half.w3-container
                if consumers.length == 0
                    p No Users of level "consumer" found.
                else 
                .w3-container(style='margin-top: 35px;')
                    h2 Consumers
                    table.w3-text-black.w3-table-all.w3-hoverable.w3-centered.w3-large(style='margin-bottom: 50px;')
                        tr
                            th Username
                        each c in consumers
                            tr
                                td= c.username
                                td
                                    a.w3-btn.w3-round-large.w3-hover-blue(href='/users/edit?user='+ c.username style='padding: 2px;')
                                        img(src='../images/icons8-edit-64.png' style='width: 50%; height: 50%;')
                                td
                                    a.w3-btn.w3-round-large.w3-hover-red(href='/users/delete/' + c.username style='padding: 2px;')
                                        img(src='../images/icons8-trash-64.png' style='width: 50%; height: 50%;') 
            .w3-half.w3-container
                if producers.length == 0
                    p No Users of level "producer" found.
                else 
                .w3-container(style='margin-top: 35px;')
                    h2 Producers
                    table.w3-text-black.w3-table-all.w3-hoverable.w3-centered.w3-large(style='margin-bottom: 50px;')
                        tr
                            th Username 
                        each p in producers
                            tr
                                td= p.username
                                td
                                    a.w3-btn.w3-round-large.w3-hover-blue(href='/users/edit?user=' + p.username style='padding: 2px;')
                                        img(src='../images/icons8-edit-64.png' style='width: 50%; height: 50%;')
                                td
                                    a.w3-btn.w3-round-large.w3-hover-red(href='/users/delete/' + p.username style='padding: 2px;')
                                        img(src='../images/icons8-trash-64.png' style='width: 50%; height: 50%;')
